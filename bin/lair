#! /bin/sh
DEFAULT="/usr/share/lair"
TMP=""
if [ -f "/etc/lairrc" ]; then
        . /etc/lairrc
fi
if [ -f "$HOME/.lairrc" ]; then
        . $HOME/.lairrc
fi
if [ -z "$IMAGEPATH" ]; then
        TMP="$TMP -p $IMAGESPATH"
fi
if [ -z "$SOUNDPATH" ]; then
        TMP="$TMP -s $SOUNDSPATH"
fi
if [ -z "$FONTSPATH" ]; then
        TMP="$TMP -f $FONTSPATH"
fi
if [ -z "$MAPSIZE" ]; then
        TMP="$TMP -m $MAPSIZE"
fi
if [ -z "$DUNGEPATH" ]; then
        TMP="$TMP -c $DUNGEPATH"
fi
if [ -z "$PLAYEPATH" ]; then
        TMP="$TMP -e $PLAYEPATH"
fi
if [ -z "$MOBILPATH" ]; then
        TMP="$TMP -a $MOBILPATH"
fi
if [ -z "$WRESOLUTION" ]; then
        TMP="$TMP -w $WRESOLUTION"
fi
if [ -z "$HRESOLUTION" ]; then
        TMP="$TMP -h $HRESOLUTION"
fi

LAIR $TMP
